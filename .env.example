# AIPipeline Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
MASTER_HOST=127.0.0.1
MASTER_PORT=8100
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# Paths (defaults are relative to project root)
# =============================================================================
# PROJECTS_DIR=./projects
# DATABASE_PATH=./data/aipipeline.db
# LOG_DIR=./logs
# WORKFLOWS_DIR=./workflows

# =============================================================================
# ComfyUI Configuration (for local execution)
# =============================================================================
COMFYUI_URL=http://127.0.0.1:8188

# =============================================================================
# Worker Configuration
# =============================================================================
MASTER_WS_URL=ws://localhost:8100/ws/worker

# =============================================================================
# Frontend Configuration (used by Vite)
# =============================================================================
VITE_API_BASE_URL=http://127.0.0.1:8100

# =============================================================================
# Security (Phase 4)
# =============================================================================
# JWT_SECRET_KEY=your-secret-key-here
# ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
